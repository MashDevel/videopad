extends layout
block content
    body
        // Header
        header#top.header
          .text-vertical-center(style='color: white')
            img(src='./img/Logo.png', alt='logo')
            |             
            h3(class="passwordTitle") You've been invited to a Coacher.io Room! 
            br
            div(class="password-field-container")
                input(id='usernameField' type="text" class="form-control" placeholder="Choose a username")
            br
            div(class="password-field-container")
                input(id='passwordField' type="password" class="form-control" placeholder="Enter the room Password")
            a.btn.btn-dark.btn-lg(id ="joinRoomBtn" style="margin-top: 10px") Join Room 
        script(src='/javascripts/passwordController.js')
        link(href='/stylesheets/password.css', rel='stylesheet')
        link(href='/stylesheets/splash.css', rel='stylesheet')
