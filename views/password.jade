extends layout
block content
    body
        // Header
        header#top.header
          .text-vertical-center
            |             
            h3(class="passwordTitle") Choose Username for room 
            br
            div(class="password-field-container")
                input(id='usernameField' type="text" class="form-control" placeholder="Enter Username")
