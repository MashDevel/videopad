extends layout

block content
    body

        // navbar stuff
        div(class='navbar navbar-inverse navbar-fixed-top' role='navigation')

            div(class='container')

                div(class='navbar-header')
                    a(class='navbar-brand' href='#') Brainboard

                //div(class='divider' id='first-divider')

                div(id='navbar')
                    ul(class='nav navbar-nav')
                        li(id='colour-preview')
                            a(class='colourpicker' href='#' data-toggle='dropdown') 

                        li(class='dropdown thickness')
                            a(href='#' data-toggle='dropdown')
                                i(class='fa fa-pencil fa-lg')
                            ul(class='dropdown-menu' role='menu')
                                li(role='presentation')
                                    a(role='menuitem' href='#' id='thin') Thin
                                li(role='presentation')
                                    a(role='menuitem' href='#' id='medium') Medium
                                li(role='presentation')
                                    a(role='menuitem' href='#' id='thick') Thick

                        li
                            a(href='#' id='eraser' data-toggle='tooltip' data-placement='bottom' title='Eraser')
                                span(class='fa fa-eraser fa-lg')
                        li
                            a(href='#' id='clear' data-toggle='tooltip' data-placement='bottom' title='Clear')
                                span(class='fa fa-trash-o fa-lg')

                    ul(class='nav navbar-nav pull-right')
                        li
                            a(href='#' id='createRoomBtn' data-toggle='tooltip' data-placement='bottom' title='Create Room')
                                i(class='fa fa-plus fa-lg')
                        li
                            a(href='#' id='joinRoomBtn' data-toggle='tooltip' data-placement='bottom' title='Join Room')
                                i(class='fa fa-sign-in fa-lg')
                        li
                            h3(href='#' id='roomNameLabel' class='label roomName label-default') No Room
                            
        // content
        div(class='container' onresize='resize_canvas()')
            div(class='row')                        
                div(class='whiteboard')
                    canvas(id='whiteboard') Your browser does not support the HTML5 tag.
        
